<h2>Search Product</h2>
<form action="/admin/products" method="get">
  <div class="">
    <label for="name">Product Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>" />
    <button type="submit">Search</button>
  </div>
</form>

<br />
<div class="all_products">
  <% products.forEach(product=>{%>
  <div class="product">
    <a href="/admin/products/<%= product.id %>"
      ><img
        width="150"
        height="150"
        src="<%= product.coverImagePath %> "
        alt="product"
    /></a>

    <div class="product_info">
      <p><%= product.name %></p>
    </div>
    <div class="product_options">
      <a href="/admin/products/<%= product.id %>">View</a>
      <a href="/admin/products/<%= product.id %>/edit">Edit</a>
      <form
        action="/admin/products/<%= product.id %>?_method=DELETE"
        method="post"
      >
        <button type="submit">Delete</button>
      </form>
    </div>
  </div>
  <%}) %>
</div>
